{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedParameters": false,
    "noErrorTruncation": false,
    "baseUrl": ".",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": ".",
	"resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6"
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "Build"]
}
