{
  "compilerOptions": {
    "module": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "noUnusedParameters": false,
    "noErrorTruncation": false,
    "baseUrl": ".",
    "target": "es5",
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable"],
    "paths": {
      "@/types/*": ["./com.arkyasmal.windowactions.sdPlugin/types/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6"
    }
  },
  "include": ["**/*.ts", "global.d.ts", "elgatoPI.lib.js"],
  "exclude": ["node_modules", "dist", "Build"]
}
